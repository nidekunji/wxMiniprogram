.banner {
  background-size: 100% 100%;
  height: 178rpx;
  color: white;
  background: linear-gradient(45deg, #50baff 0%, #008be5 100%);
  width: 100%;
  align-items: center;
  font-size: 32rpx;
  justify-items: flex-start;
}

.banner .avatar {
  margin: 0rpx 20rpx 0rpx 50rpx;
  width: 108rpx;
  height: 108rpx;
  background-color: white;
}

.banner>text {
  width: 500rpx;
}

.banner .scan {
  width: 40rpx;
  height: 40rpx;
  justify-self: flex-end;
}

.user-center {
  background-color: white;
}

.block-title view {
  width: 6rpx;
  height: 18rpx;
  background-color: #5391e1;
  margin: 0 10rpx 0 30rpx;
}

.block-title {
  margin: 28rpx 0 20rpx 0;
  align-items: center;
}

.block-title text {
  color: #666;
  font-size: 24rpx;
}

.user-center .row:not(.block-title) {
  margin-bottom: 20rpx;
  justify-content: start;
  padding-left: 20rpx;
}

.user-center .row>div {
  align-items: center;
}

.user-center .row>div .img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 13rpx;
}

.user-center .row>div image {
  max-width: 44rpx;
  max-height: 44rpx;
}

.user-center .row>div .txt {
  color: #333;
  font-size: 26rpx;
}

.user-center .row navigator {
  align-items: center;
  margin: 0 43rpx;
}

.user-center .row navigator .img {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 13rpx;
}

.user-center .row navigator image {
  max-width: 44rpx;
  max-height: 44rpx;
}

.user-center .row navigator .txt {
  color: #333;
  font-size: 26rpx;
}
