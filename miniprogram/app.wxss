.container {
  height: 100%;
}

page {
  background: #f1f1f1;
}

.row {
  display: flex;
  flex-direction: row;
}

.col {
  display: flex;
  flex-direction: column;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-oneline {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gap {
  width: 100%;
  height: 10rpx;
  background-color: #f1f1f1;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #f1f1f1;
}

.break {
  word-break: break-all;
}

