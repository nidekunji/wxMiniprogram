}

.bg-white {
  background-color: white;
}

.bg-btn {
  width: 325rpx;
  height: 70rpx;
  color: white;
  font-size: 28rpx;
  background: linear-gradient(45deg, #50baff 0%, #008be5 100%);
  border-radius: 44rpx;
}

/* 引入的其他样式 */

.shadow {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.8;
  z-index: 99;
}

.shadow-content {
  position: absolute;
  z-index: 100;
}

.avatar {
  border-radius: 50%;
}



::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
